@import "./common/vendor.wxss";

page {
  width: 100%;
  height: 100%;
}
.key .keyInput {
  border-radius: 100rpx;
  background: #f7f7f7;
}
.key .keyInput .van-cell {
  background: none;
  height: 64rpx;
  line-height: 64rpx;
}
.allClass .van-cell {
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
}
.switchlist .switchItem {
  line-height: 64rpx;
}
.switchlist .switchItem .van-icon {
  line-height: 64rpx;
  margin-top: 22rpx;
}
.switchlist .switchItem  .van-cell__left-icon-wrap {
  line-height: 64rpx;
}
.searchview .title view {
  display: inline;
}
.wxParse view {
  display: inline;
}
.content .wxParse view {
  display: block;
}
.highLightKeywords {
  display: inline;
  color: rgb(250, 6, 6);
}
.title .wxParse {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  width: 504rpx;
}
.xqbox .title .wxParse {
  overflow: hidden;
  white-space: normal;
  float: left;
  width: auto;
}
.content .wxParse image {
  width: 100%  !important;
  display: block !important;
}
.content .wxParse view {
  margin: 30rpx 0;
  line-height: 200%;
  font-size: 32rpx;
}
.content .wxParse view:nth-last-child(1) {
  text-align: right;
}
.content .wxParse .strong {
  font-weight: bold;
}
.content .wxParse .inline {
  display: inline;
}
.content .wxParse .span {
  text-align: center;
}